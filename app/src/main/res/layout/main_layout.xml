    <Button
        android:id="@+id/btnLista"
        android:layout_width="188dp"
        android:layout_height="56dp"
        android:background="@drawable/button_aparcamientos_click"
        android:text="Aparcamientos"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
    />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="301dp"
        android:layout_height="87dp"
        android:background="@drawable/button_guardar_click"
        android:text="Guardar ubi"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.412" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toTopOf="@+id/txtAlert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGuardar"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtAlert"
        android:layout_width="346dp"
        android:layout_height="79dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Se ha guardado la ubi del aparcamiento!"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#CDDC39"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGuardar"
        app:layout_constraintVertical_bias="0.346" />

</androidx.constraintlayout.widget.ConstraintLayout>